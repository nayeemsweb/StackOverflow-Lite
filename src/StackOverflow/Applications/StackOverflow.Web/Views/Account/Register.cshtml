@model RegisterModel
@{
	ViewData["Title"] = "Register";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles
	{
	<style>
		.banner-area {
			display: none;
		}
	</style>
}

<form class="user-form needs-validation" novalidate>
	<div class="row">
		<h2 class="text-center">Register</h2>

		<div class="col-12">
			<div class="form-group">
				<label>Display Name</label>
				<input asp-for="DisplayName" class="form-control" type="text" name="name" required>
			</div>
		</div>

		<div class="col-12">
			<div class="form-group">
				<label>Email</label>
				<input asp-for="Email" class="form-control" type="email" name="name" required>
			</div>
		</div>

		<div class="col-12">
			<div class="form-group">
				<label>Password</label>
				<input asp-for="Password" class="form-control" type="password" name="password" required>
			</div>
		</div>

		<div class="col-12">
			<div class="form-group">
				<label>Confirm Password</label>
				<input asp-for="ConfirmPassword" class="form-control" type="password" name="password" required>
			</div>
		</div>

		<div class="col-12">
			<button class="default-btn" type="submit">
				Register
			</button>
		</div>

		<div class="col-12">
			<p class="create">
				Already have an account?
				<a asp-area="" asp-controller="Account" asp-action="Login">Login</a>
			</p>
		</div>
	</div>
</form>

@section Scripts
{
	<script src="~/pify/assets/js/disableFormSubmission.js"></script>
}