@model UpdateCommentModel
@{
    ViewData["Title"] = "UpdateComment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles
{
	<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
}

<h1>Create Comment</h1>

<div class="offset-lg-1 col-lg-10">
	<h1>Create Comment</h1>
	<div class="middull-content">
		<ul class="page-nish">
			<li>
				<a href="index.html">
					<i class="ri-home-8-line"></i>
					Home
				</a>
			</li>
			<li>
				Question
			</li>
			<li class="active">
				Question Details
			</li>
		</ul>

		<form class="aq-form" >
			<i class="ri-search-line"></i>
			<input type="text" class="form-control" placeholder="Have a question? Ask or enter a search">
			<button class="aq-btn">
				Ask Question
			</button>
		</form>

		<div class="question-details-area">

			<form class="your-answer-form" method="post" asp-antiforgery="true"
				  asp-area="" asp-controller="Home" asp-action="UpdateComment">
					<div asp-validation-summary="All" class="text-danger"></div>
				<div class="form-group">
					<h3>Your Answer</h3>
				</div>
				<input type="hidden" asp-for="Id" />
				<div class="form-group">
					<label asp-for="Description">Write your answer here.</label>
						<textarea asp-for="Description" id="summernote" maxlength="1500"></textarea>
				</div>
				<div class="form-group">
					<button type="submit" class="default-btn">Update Your Answer</button>
				</div>
			</form>
		</div>
	</div>
</div>

@section Scripts
{
	<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>

	<script>
		$(document).ready(function () {
			$('#summernote').summernote();
		});
	</script>
}

